<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Proiect.AboutPage"
             Title="About">
    <VerticalStackLayout Spacing="10" Margin="10">
        <HorizontalStackLayout Spacing="10">
            <Image Source="car_icon2.png"
                   SemanticProperties.Description="Car application"
                   HeightRequest="64" />
            <Label FontSize="22" FontAttributes="Bold" Text="Application" VerticalOptions="End" />
            <Label FontSize="22" Text="v1.0" VerticalOptions="End" />
        </HorizontalStackLayout>
        <Label Text="This app allows users to create records regarding both their vehicles' identification information (number, brand, model) and other such relevant info like vignette or insurance expiration date " />

    </VerticalStackLayout>
</ContentPage>